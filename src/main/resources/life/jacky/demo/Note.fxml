<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="life.jacky.demo.NoteController">
   <children>
      <Label styleClass="title-text" text="Note" />
      <Label styleClass="created-date" fx:id="createdDate" />
      <TextArea fx:id="textArea" onKeyReleased="#onKeyReleased" prefHeight="370.0" prefWidth="600.0" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <stylesheets>
      <URL value="@Global.css" />
      <URL value="@Notes.css" />
   </stylesheets>
</VBox>
